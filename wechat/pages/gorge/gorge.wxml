<!--pages/gorge/gorge.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title">{{show}}</view>
        <view class="page__desc">{{title}}</view>
    </view>
    <view class="page__bd">
      <view id="recipe" hidden="{{recipe.display}}">
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__hd">全部</view>
            <view class="weui-panel__bd">
                <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="../../images/Berries.png" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">标题一</view>
                        <view class="weui-media-box__desc">由各种物质组成的巨型球状天体，叫做星球。星球有一定的形状，有自己的运行轨道。</view>
                    </view>
                </navigator>
                <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="../../images/Berry_Tart.png" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">标题二</view>
                        <view class="weui-media-box__desc">由各种物质组成的巨型球状天体，叫做星球。星球有一定的形状，有自己的运行轨道。</view>
                    </view>
                </navigator>
            </view>
        </view>
      </view>
    </view>
    <view class="page__ft">
        <view class="weui-footer weui-footer_fixed-bottom">
            <image src="../../images/icon_footer.png" style="width: 160px; height: 35px;"></image>
        </view>
    </view>
</view>